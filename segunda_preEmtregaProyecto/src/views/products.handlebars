<div>

<div>
    <h1>PRODUCTOS EN STOCK 🍅🌿</h1>
    </div>

<table id="main" role="grid">

  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Precio</th>
    <th>Stock</th>
    <th>Categoria</th>
    <th>cantidad</th>
    <th>ingresar</th>
  </tr>
  {{#each payload}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.category}}</td> 
  
      <form id="myForm{{this.id}}"method="post" >
        <td><input style="width: 100px;" type="text" placeholder="Ingrese Cantidad" name="cantidad" value="1" required></td>   
        <input type="hidden" name="productId" value="{{this._id}}">  
        <td><input class="envio-button" type="image" data-id={{this._id}} name="enviar" src="/imagen/carrito.png" alt="carga"></td>   
      </form>
    </tr>
  {{/each}}
  
</table>
<p>Página actual: {{page}}</p>
<a href="{{prevLink}}" role="button" {{#unless hasPrevPage}}disabled{{/unless}} >Anterior</a>
<a href="{{nextLink}}" role="button" {{#unless hasNextPage}}disabled{{/unless}} >Siguiente</a>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="/js/index.js"></script>

</div>